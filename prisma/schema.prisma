

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id String @id @default(uuid())
  firstname String
  lastname String?
  email String @unique
  password String 
  role UserRole @default(WORKER)
  createdAt DateTime @default(now()) @map("created_at")
  updateAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
enum UserRole {
  ADMIN
  WORKER

  @@map("user_roles")
}